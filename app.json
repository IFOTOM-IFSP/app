{
  "expo": {
    "name": "iFOTOM",
    "slug": "iFOTOM",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.jpg",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash_icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#A25CC7"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "Precisamos da c칙mera para capturar espectros."
      },
      "bundleIdentifier": "com.anonymous.iFOTOM"
    },
    "android": {
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "package": "com.anonymous.iFOTOM"
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "./plugins/withExpoMavenRepos",
      "expo-build-properties",
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "Precisamos da c칙mera para an치lises."
        }
      ],
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir que $(PRODUCT_NAME) acesse sua c칙mera.",
          "microphonePermission": "Permitir que $(PRODUCT_NAME) acesse seu microfone.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Permitir que $(PRODUCT_NAME) acesse suas fotos.",
          "savePhotosPermission": "Permitir que $(PRODUCT_NAME) salve fotos no seu dispositivo.",
          "isAccessPrivileged": true
        }
      ],
      "expo-sqlite",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash_icon.png",
          "dark": {
            "image": "./assets/images/splash_icon.png"
          },
          "imageWidth": 500,
          "imageHeight": 700
        }
      ],
      "expo-web-browser",
      [
        "expo-notifications",
        {
          "color": "#ffffff",
          "defaultChannel": "default",
          "enableBackgroundRemoteNotifications": false
        }
      ],
      "expo-font",
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "react-native",
          "organization": "ifsp-campus-campinas"
        }
      ],
      "./plugins/withSpectroFramePlugin"
    ],
    "scheme": "myapp",
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1b2048b2-14b3-42fd-b815-1e7373b9a8a5"
      }
    }
  }
}
